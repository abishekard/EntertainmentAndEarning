<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.gam">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="281dp"
            android:layout_height="229dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.206">

            <ImageView
                android:id="@+id/g1"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:background="@drawable/gm1"
                app:layout_column="0"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/g2"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:background="@drawable/g2"
                app:layout_column="1"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/g3"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/g3"
                app:layout_column="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/g4"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:background="@drawable/g4"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/g5"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:background="@drawable/g5"
                app:layout_column="1"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/g6"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_margin="3dp"
                android:background="@drawable/g6"
                app:layout_column="2"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
